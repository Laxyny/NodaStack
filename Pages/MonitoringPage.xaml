<Page x:Class="NodaStack.Pages.MonitoringPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:converters="clr-namespace:NodaStack.Converters"
      xmlns:local="clr-namespace:NodaStack"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Monitoring">

    <Page.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <local:BytesToStringConverter x:Key="BytesToStringConverter"/>
    </Page.Resources>

    <ScrollViewer Padding="24,0,24,24">
        <StackPanel MaxWidth="1200" HorizontalAlignment="Left">
            <TextBlock Text="Monitoring" Style="{StaticResource PageTitleStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Logs Timeline -->
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="Live Activity" Style="{StaticResource SectionTitleStyle}" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <ComboBox x:Name="LevelFilterComboBox" Width="100" SelectionChanged="LevelFilterComboBox_SelectionChanged" Margin="0,0,8,0" ui:ControlHelper.PlaceholderText="Level">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="Error"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Info"/>
                                <ComboBoxItem Content="Debug"/>
                            </ComboBox>
                            <ComboBox x:Name="ServiceFilterComboBox" Width="120" SelectionChanged="ServiceFilterComboBox_SelectionChanged" Margin="0,0,8,0" ui:ControlHelper.PlaceholderText="Service">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="Apache"/>
                                <ComboBoxItem Content="PHP"/>
                                <ComboBoxItem Content="MySQL"/>
                                <ComboBoxItem Content="phpMyAdmin"/>
                                <ComboBoxItem Content="System"/>
                            </ComboBox>
                            <Button Content="Clear" Click="ClearLogsButton_Click" Style="{StaticResource ProSecondaryButtonStyle}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>

                    <Border Style="{StaticResource ProCardStyle}" Padding="0">
                        <ListView x:Name="LogsListView" 
                                  Height="600" 
                                  BorderThickness="0" 
                                  Background="Transparent"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundChromeLowBrush}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Status Indicator -->
                                        <Border Width="4" Height="40" CornerRadius="2" Margin="0,0,16,0"
                                                Background="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"
                                                VerticalAlignment="Top"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Column="1">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="{Binding Service}" FontWeight="SemiBold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                <TextBlock Text="â€¢" Margin="8,0" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                                <TextBlock Text="{Binding Level}" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                        </StackPanel>

                                        <!-- Time -->
                                        <TextBlock Grid.Column="2" Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                                   FontSize="12" VerticalAlignment="Top" Margin="16,0,0,0"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </StackPanel>

                <!-- Right: Resources Sidebar -->
                <StackPanel Grid.Column="1">
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="System Resources" Style="{StaticResource SectionTitleStyle}" VerticalAlignment="Center"/>
                        <Button Content="Refresh" Click="RefreshButton_Click" Style="{StaticResource ProSecondaryButtonStyle}" HorizontalAlignment="Right" Padding="8,4"/>
                    </Grid>

                    <!-- CPU Card -->
                    <Border Style="{StaticResource ProCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="CPU Usage" Style="{StaticResource SubTitleStyle}"/>
                                <TextBlock x:Name="CpuUsageText" Text="0%" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource AccentBrush}"/>
                            </Grid>
                            <ProgressBar x:Name="CpuProgressBar" Maximum="100" Height="6" Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Memory Card -->
                    <Border Style="{StaticResource ProCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Memory" Style="{StaticResource SubTitleStyle}"/>
                                <TextBlock x:Name="MemoryUsageText" Text="0 MB" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource AccentBrush}"/>
                            </Grid>
                            <ProgressBar x:Name="MemoryProgressBar" Maximum="100" Height="6" Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Disk Card -->
                    <Border Style="{StaticResource ProCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Disk Space" Style="{StaticResource SubTitleStyle}"/>
                                <TextBlock x:Name="DiskUsageText" Text="0 GB" FontWeight="Bold" HorizontalAlignment="Right" Foreground="{StaticResource AccentBrush}"/>
                            </Grid>
                            <ProgressBar x:Name="DiskProgressBar" Maximum="100" Height="6" Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
