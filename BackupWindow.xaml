<Window x:Class="NodaStack.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:NodaStack"
        Title="Backup &amp; Import/Export - NodaStack"
        Icon="Assets/NodaStackLogo.ico"
        Height="550"
        Width="900"
        MinHeight="450"
        MinWidth="700"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.Resources>
        <local:BytesToStringConverter x:Key="BytesToStringConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Controls -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,16">
            <Button x:Name="RefreshButton"
                    Width="80"
                    Height="32"
                    Content="Refresh"
                    Margin="0,0,8,0"
                    Click="RefreshButton_Click"
                    Style="{StaticResource DefaultButtonStyle}"/>
            <Button x:Name="CloseButton"
                    Width="80"
                    Height="32"
                    Content="Close"
                    Click="CloseButton_Click"
                    Style="{StaticResource DefaultButtonStyle}"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Backup History -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0"
                                Margin="0,0,0,16">
                        <TextBlock Text="Backup &amp; Import/Export"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        <TextBlock Text="Create backups and restore your NodaStack configuration"
                                   FontSize="13"
                                   Margin="0,8,0,0"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>

                    <!-- Backup History List -->
                    <ListView x:Name="BackupHistoryListView"
                              Grid.Row="1"
                              Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                              BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                              BorderThickness="1"
                              Margin="0,0,0,12"
                              SelectionChanged="BackupHistoryListView_SelectionChanged"
                              Style="{StaticResource DefaultListViewStyle}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name"
                                                Width="200"
                                                DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Type"
                                                Width="100"
                                                DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Created"
                                                Width="120"
                                                DisplayMemberBinding="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                <GridViewColumn Header="Size"
                                                Width="80"
                                                DisplayMemberBinding="{Binding FileSize, Converter={StaticResource BytesToStringConverter}}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Status -->
                    <TextBlock x:Name="StatusText"
                               Grid.Row="2"
                               Text="Loaded 0 backup(s)"
                               FontSize="12"
                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                </Grid>
            </Border>

            <!-- Right Panel - Actions -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    
                    <!-- Create Backup Section -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,12"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Create Backup"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            
                            <TextBox x:Name="BackupNameTextBox"
                                     Height="32"
                                     FontSize="13"
                                     Style="{StaticResource DefaultTextBoxStyle}"/>
                            <TextBlock Text="Leave empty for auto-generated name"
                                       FontSize="11"
                                       Margin="0,4,0,12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            
                            <Button x:Name="CreateFullBackupButton"
                                    Width="140"
                                    Height="32"
                                    Content="Create Full Backup"
                                    Margin="0,0,0,8"
                                    Click="CreateFullBackupButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                            <Button x:Name="CreateConfigBackupButton"
                                    Width="140"
                                    Height="32"
                                    Content="Create Config Backup"
                                    Click="CreateConfigBackupButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Import/Export Section -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,12"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Import/Export"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            
                            <Button x:Name="ImportBackupButton"
                                    Width="140"
                                    Height="32"
                                    Content="Import Backup"
                                    Margin="0,0,0,8"
                                    Click="ImportBackupButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                            <Button x:Name="ExportSelectedButton"
                                    Width="140"
                                    Height="32"
                                    Content="Export Selected"
                                    IsEnabled="False"
                                    Click="ExportSelectedButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Backup Details Section -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,12"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Backup Details"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            
                            <TextBlock x:Name="BackupDetailsText"
                                       Text="Select a backup to view details"
                                       FontSize="12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Actions Section -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                            BorderThickness="1"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Actions"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            
                            <Button x:Name="RestoreBackupButton"
                                    Width="140"
                                    Height="32"
                                    Content="Restore Backup"
                                    Margin="0,0,0,8"
                                    IsEnabled="False"
                                    Click="RestoreBackupButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                            <Button x:Name="DeleteBackupButton"
                                    Width="140"
                                    Height="32"
                                    Content="Delete Backup"
                                    IsEnabled="False"
                                    Click="DeleteBackupButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>