<Window x:Class="NodaStack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="NodaStack"
        Icon="Assets/NodaStackLogo.ico"
        Height="650"
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">
        <Window.InputBindings>
                <KeyBinding Key="M"
                            Modifiers="Ctrl"
                            Command="{Binding OpenMonitoringCommand}"/>
                <KeyBinding Key="OemComma"
                            Modifiers="Ctrl"
                            Command="{Binding OpenConfigurationCommand}"/>
                <KeyBinding Key="N"
                            Modifiers="Ctrl"
                            Command="{Binding NewProjectCommand}"/>
                <KeyBinding Key="R"
                            Modifiers="Ctrl"
                            Command="{Binding RefreshProjectsCommand}"/>
                <KeyBinding Key="F5"
                            Command="{Binding RefreshAllCommand}"/>
                <KeyBinding Key="Q"
                            Modifiers="Ctrl"
                            Command="{Binding ExitCommand}"/>
                <KeyBinding Key="F1"
                            Command="{Binding ShowHelpCommand}"/>
                <KeyBinding Key="B"
                            Modifiers="Ctrl"
                            Command="{Binding BackupCommand}"/>
        </Window.InputBindings>

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Modern Header Section -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="20,16">
                        <StackPanel>
                                <!-- Title Section -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,20">
                                        <TextBlock Text="ðŸš€"
                                                   FontSize="32"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>
                                        <TextBlock Text="NodaStack Launcher"
                                                   FontSize="24"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                </StackPanel>

                                <!-- Control Buttons Section -->
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                        <Button x:Name="ThemeToggleButton"
                                                Width="44"
                                                Height="36"
                                                Margin="0,0,8,0"
                                                Click="ThemeToggle_Click"
                                                ToolTip="Toggle Theme"
                                                Style="{StaticResource DefaultButtonStyle}"
                                                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                                BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}">
                                                <TextBlock Text="ðŸŒ™"
                                                           FontSize="16"/>
                                        </Button>
                                        <Button x:Name="MonitoringButton"
                                                Width="120"
                                                Height="36"
                                                Margin="0,0,8,0"
                                                Click="Monitoring_Click"
                                                ToolTip="Ctrl+M"
                                                Style="{StaticResource DefaultButtonStyle}">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="ðŸ“Š"
                                                                   FontSize="14"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Monitoring"
                                                                   FontWeight="SemiBold"/>
                                                </StackPanel>
                                        </Button>
                                        <Button x:Name="ConfigurationButton"
                                                Width="120"
                                                Height="36"
                                                Margin="0,0,8,0"
                                                Click="Configuration_Click"
                                                ToolTip="Ctrl+,"
                                                Style="{StaticResource DefaultButtonStyle}">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="âš™ï¸"
                                                                   FontSize="14"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Configuration"
                                                                   FontWeight="SemiBold"/>
                                                </StackPanel>
                                        </Button>
                                        <Button x:Name="BackupButton"
                                                Width="120"
                                                Height="36"
                                                Click="BackupMenuItem_Click"
                                                ToolTip="Ctrl+B"
                                                Style="{StaticResource DefaultButtonStyle}">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <TextBlock Text="ðŸ’¾"
                                                                   FontSize="14"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Backup"
                                                                   FontWeight="SemiBold"/>
                                                </StackPanel>
                                        </Button>
                                </StackPanel>
                        </StackPanel>
                </Border>

                <!-- Main Content Section -->
                <Grid Grid.Row="1"
                      Margin="20">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Services Cards Section -->
                        <UniformGrid Grid.Row="0"
                                     Columns="4"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,20">
                                <!-- Apache -->
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="6"
                                        Padding="16"
                                        Width="180"
                                        Height="180">
                                        <StackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <Ellipse x:Name="ApacheIndicator"
                                                                 Width="14"
                                                                 Height="14"
                                                                 Fill="Red"
                                                                 Margin="0,0,6,0"/>
                                                        <TextBlock Text="ðŸŒ"
                                                                   FontSize="18"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Apache"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>
                                                <Button x:Name="StartApacheButton"
                                                        Height="36"
                                                        Margin="0,0,0,6"
                                                        Click="StartApache_Click"
                                                        ToolTip="Ctrl+1"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,4,0"/>
                                                                <TextBlock Text="Start Apache"
                                                                           FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="ApachePortInfo"
                                                           Text="Port: 8080"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,0,0,6"/>
                                                <Button x:Name="OpenApacheButton"
                                                        Height="28"
                                                        FontSize="11"
                                                        Click="OpenApache_Click"
                                                        IsEnabled="False"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="ðŸŒ"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- PHP -->
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="6"
                                        Padding="16"
                                        Width="180"
                                        Height="180">
                                        <StackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <Ellipse x:Name="PhpIndicator"
                                                                 Width="14"
                                                                 Height="14"
                                                                 Fill="Red"
                                                                 Margin="0,0,6,0"/>
                                                        <TextBlock Text="ðŸ˜"
                                                                   FontSize="18"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="PHP"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>
                                                <Button x:Name="StartPHPButton"
                                                        Height="36"
                                                        Margin="0,0,0,6"
                                                        Click="StartPHP_Click"
                                                        ToolTip="Ctrl+2"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,4,0"/>
                                                                <TextBlock Text="Start PHP"
                                                                           FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="PhpPortInfo"
                                                           Text="Port: 8000"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,0,0,6"/>
                                                <Button x:Name="OpenPhpButton"
                                                        Height="28"
                                                        FontSize="11"
                                                        Click="OpenPhp_Click"
                                                        IsEnabled="False"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="ðŸŒ"
                                                                   FontSize="10"
                                                                   Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- MySQL -->
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="6"
                                        Padding="16"
                                        Width="180"
                                        Height="180">
                                        <StackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <Ellipse x:Name="MySqlIndicator"
                                                                 Width="14"
                                                                 Height="14"
                                                                 Fill="Red"
                                                                 Margin="0,0,6,0"/>
                                                        <TextBlock Text="ðŸ—ƒï¸"
                                                                   FontSize="18"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="MySQL"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>
                                                <Button x:Name="StartMySQLButton"
                                                        Height="36"
                                                        Margin="0,0,0,6"
                                                        Click="StartMySQL_Click"
                                                        ToolTip="Ctrl+3"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,4,0"/>
                                                                <TextBlock Text="Start MySQL"
                                                                           FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="MySqlPortInfo"
                                                           Text="Port: 3306"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,0,0,6"/>
                                                <Button x:Name="OpenMySqlButton"
                                                        Height="28"
                                                        FontSize="11"
                                                        Click="OpenMySql_Click"
                                                        IsEnabled="False"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="ðŸ”—"
                                                                   FontSize="10"
                                                                   Margin="0,0,3,0"/>
                                                                <TextBlock Text="Database Access"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- phpMyAdmin -->
                                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="6"
                                        Padding="16"
                                        Width="180"
                                        Height="180">
                                        <StackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <Ellipse x:Name="PhpMyAdminIndicator"
                                                                 Width="14"
                                                                 Height="14"
                                                                 Fill="Red"
                                                                 Margin="0,0,6,0"/>
                                                        <TextBlock Text="ðŸ› ï¸"
                                                                   FontSize="18"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="phpMyAdmin"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>
                                                <Button x:Name="StartPhpMyAdminButton"
                                                        Height="36"
                                                        Margin="0,0,0,6"
                                                        Click="StartPhpMyAdmin_Click"
                                                        ToolTip="Ctrl+4"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,4,0"/>
                                                                <TextBlock Text="Start phpMyAdmin"
                                                                   FontWeight="SemiBold"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="PhpMyAdminPortInfo"
                                                           Text="Port: 8081"
                                                           FontSize="11"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                           Margin="0,0,0,6"/>
                                                <Button x:Name="OpenPhpMyAdminButton"
                                                        Height="28"
                                                        FontSize="11"
                                                        Click="OpenPhpMyAdmin_Click"
                                                        IsEnabled="False"
                                                        Style="{StaticResource DefaultButtonStyle}">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center">
                                                                <TextBlock Text="ðŸŒ"
                                                                   FontSize="10"
                                                                   Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>
                        </UniformGrid>

                        <!-- Bottom Section -->
                        <Grid Grid.Row="1"
                              Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Projects Manager -->
                                <Border Grid.Column="0"
                                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="0,0,10,0">
                                        <Grid Margin="16">
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header -->
                                                <StackPanel Grid.Row="0"
                                                            Orientation="Horizontal"
                                                            Margin="0,0,0,12">
                                                        <TextBlock Text="ðŸ“"
                                                                   FontSize="16"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Projects Manager"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>

                                                <!-- Project Controls -->
                                                <StackPanel Grid.Row="1"
                                                            Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,12">
                                                        <TextBox x:Name="NewProjectTextBox"
                                                                 Width="140"
                                                                 Height="32"
                                                                 Text="Project name..."
                                                                 Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                                 GotFocus="NewProjectTextBox_GotFocus"
                                                                 LostFocus="NewProjectTextBox_LostFocus"
                                                                 Style="{StaticResource DefaultTextBoxStyle}"/>
                                                        <Button x:Name="CreateProjectButton"
                                                                Width="70"
                                                                Height="32"
                                                                Margin="6,0,0,0"
                                                                Click="CreateProject_Click"
                                                                ToolTip="Ctrl+N"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="âž•"
                                                                                   FontSize="10"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Create"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="RefreshProjectsButton"
                                                                Width="70"
                                                                Height="32"
                                                                Margin="6,0,0,0"
                                                                Click="RefreshProjects_Click"
                                                                ToolTip="Ctrl+R"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ”„"
                                                                                   FontSize="10"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Refresh"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="OpenProjectsFolderButton"
                                                                Width="100"
                                                                Height="32"
                                                                Margin="6,0,0,0"
                                                                Click="OpenProjectsFolder_Click"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ“‚"
                                                                                   FontSize="10"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Open Folder"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                </StackPanel>

                                                <!-- Projects List -->
                                                <ListView x:Name="ProjectsListView"
                                                          Grid.Row="2"
                                                          Margin="0,0,0,12"
                                                          Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                                          BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                                          BorderThickness="1"
                                                          Style="{StaticResource DefaultListViewStyle}">
                                                        <ListView.View>
                                                                <GridView>
                                                                        <GridViewColumn Header="Name"
                                                                                        Width="120"
                                                                                        DisplayMemberBinding="{Binding Name}"/>
                                                                        <GridViewColumn Header="Files"
                                                                                        Width="50"
                                                                                        DisplayMemberBinding="{Binding FileCount}"/>
                                                                        <GridViewColumn Header="Modified"
                                                                                        Width="100"
                                                                                        DisplayMemberBinding="{Binding LastModified, StringFormat='{}{0:MM/dd/yyyy}'}"/>
                                                                </GridView>
                                                        </ListView.View>
                                                </ListView>

                                                <!-- Project Actions -->
                                                <StackPanel Grid.Row="3"
                                                            Orientation="Horizontal"
                                                            HorizontalAlignment="Center">
                                                        <Button x:Name="OpenProjectButton"
                                                                Width="100"
                                                                Height="28"
                                                                Margin="0,0,4,0"
                                                                Click="OpenProject_Click"
                                                                IsEnabled="False"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ“‚"
                                                                                   FontSize="9"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Open Folder"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="ShareProjectButton"
                                                                Width="60"
                                                                Height="28"
                                                                Margin="4,0"
                                                                Click="ShareProject_Click"
                                                                IsEnabled="False"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ”—"
                                                                                   FontSize="9"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Share"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="ViewApacheButton"
                                                                Width="130"
                                                                Height="28"
                                                                Margin="4,0"
                                                                Click="ViewApache_Click"
                                                                IsEnabled="False"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸŒ"
                                                                                   FontSize="9"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="View (Apache)"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="ViewPhpButton"
                                                                Width="120"
                                                                Height="28"
                                                                Margin="4,0"
                                                                Click="ViewPhp_Click"
                                                                IsEnabled="False"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ˜"
                                                                                   FontSize="9"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="View (PHP)"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                        <Button x:Name="DeleteProjectButton"
                                                                Width="70"
                                                                Height="28"
                                                                Margin="4,0,0,0"
                                                                Click="DeleteProject_Click"
                                                                IsEnabled="False"
                                                                Style="{StaticResource DefaultButtonStyle}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                        <TextBlock Text="ðŸ—‘ï¸"
                                                                                   FontSize="9"
                                                                                   Margin="0,0,3,0"/>
                                                                        <TextBlock Text="Delete"
                                                                                   FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                        </Button>
                                                </StackPanel>
                                        </Grid>
                                </Border>

                                <!-- Logs Section -->
                                <Border Grid.Column="1"
                                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                                        BorderThickness="1"
                                        Margin="10,0,0,0">
                                        <Grid Margin="16">
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <!-- Header -->
                                                <StackPanel Grid.Row="0"
                                                            Orientation="Horizontal"
                                                            Margin="0,0,0,12">
                                                        <TextBlock Text="ðŸ“‹"
                                                                   FontSize="16"
                                                                   Margin="0,0,6,0"/>
                                                        <TextBlock Text="Logs"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                                                </StackPanel>

                                                <!-- Log Content -->
                                                <ScrollViewer Grid.Row="1"
                                                              VerticalScrollBarVisibility="Auto"
                                                              Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                                                        <TextBox Name="LogBox"
                                                                 FontFamily="Consolas"
                                                                 FontSize="11"
                                                                 IsReadOnly="True"
                                                                 TextWrapping="Wrap"
                                                                 AcceptsReturn="True"
                                                                 VerticalScrollBarVisibility="Auto"
                                                                 Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                                                 Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                                                 BorderThickness="0"
                                                                 Padding="8"/>
                                                </ScrollViewer>
                                        </Grid>
                                </Border>
                        </Grid>
                </Grid>

                <!-- Modern Status Bar -->
                <Border Grid.Row="2"
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundChromeDisabledLowBrush}"
                        BorderThickness="0,1,0,0"
                        Height="32">
                        <DockPanel x:Name="MainStatusBar"
                                   Margin="20,0">
                                <TextBlock x:Name="StatusText"
                                           Text="Ready"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                           DockPanel.Dock="Left"
                                           FontWeight="SemiBold"/>

                                <TextBlock x:Name="TimeText"
                                           Text="00:00:00"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           DockPanel.Dock="Right"/>

                                <TextBlock x:Name="ServicesText"
                                           Text="Services: 0/4 running"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                           HorizontalAlignment="Center"
                                           FontWeight="SemiBold"/>
                        </DockPanel>
                </Border>
        </Grid>
</Window>