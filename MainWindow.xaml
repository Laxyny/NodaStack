<Window x:Class="NodaStack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="NodaStack"
        Icon="Assets/NodaStackLogo.ico"
        Height="600"
        Width="1000"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">
        <Window.InputBindings>
                <KeyBinding Key="M"
                            Modifiers="Ctrl"
                            Command="{Binding OpenMonitoringCommand}"/>
                <KeyBinding Key="OemComma"
                            Modifiers="Ctrl"
                            Command="{Binding OpenConfigurationCommand}"/>
                <KeyBinding Key="N"
                            Modifiers="Ctrl"
                            Command="{Binding NewProjectCommand}"/>
                <KeyBinding Key="R"
                            Modifiers="Ctrl"
                            Command="{Binding RefreshProjectsCommand}"/>
                <KeyBinding Key="F5"
                            Command="{Binding RefreshAllCommand}"/>
                <KeyBinding Key="Q"
                            Modifiers="Ctrl"
                            Command="{Binding ExitCommand}"/>
                <KeyBinding Key="F1"
                            Command="{Binding ShowHelpCommand}"/>
                <KeyBinding Key="B"
                            Modifiers="Ctrl"
                            Command="{Binding BackupCommand}"/>
        </Window.InputBindings>

        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,10,0,20">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <TextBlock Text="ðŸš€"
                                           FontSize="28"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="NodaStack Launcher"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,10">
                                <Button x:Name="ThemeToggleButton"
                                        Width="40"
                                        Height="30"
                                        Margin="0,0,5,0"
                                        Click="ThemeToggle_Click"
                                        ToolTip="Toggle Theme">
                                        <TextBlock Text="ðŸŒ™"
                                                   FontSize="14"/>
                                </Button>
                                <Button x:Name="MonitoringButton"
                                        Width="120"
                                        Height="30"
                                        Margin="0,0,5,0"
                                        Click="Monitoring_Click"
                                        ToolTip="Ctrl+M"
                                        Style="{StaticResource AccentButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“Š"
                                                           FontSize="14"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="Monitoring"/>
                                        </StackPanel>
                                </Button>
                                <Button x:Name="ConfigurationButton"
                                        Width="120"
                                        Height="30"
                                        Click="Configuration_Click"
                                        ToolTip="Ctrl+,"
                                        Style="{StaticResource AccentButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="âš™ï¸"
                                                           FontSize="14"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="Configuration"/>
                                        </StackPanel>
                                </Button>
                                <Button x:Name="BackupButton"
                                        Width="120"
                                        Height="30"
                                        Margin="5,0,0,0"
                                        Click="BackupMenuItem_Click"
                                        ToolTip="Ctrl+B"
                                        Style="{StaticResource AccentButtonStyle}">
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ’¾"
                                                           FontSize="14"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="Backup"/>
                                        </StackPanel>
                                </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <!-- Apache -->
                                <Border Background="{DynamicResource GroupBoxBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="5"
                                        Padding="10">
                                        <StackPanel Orientation="Vertical"
                                                    Width="140">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,8">
                                                        <Ellipse x:Name="ApacheIndicator"
                                                                 Width="12"
                                                                 Height="12"
                                                                 Fill="Red"
                                                                 Margin="0,0,5,0"/>
                                                        <TextBlock Text="ðŸŒ"
                                                                   FontSize="16"
                                                                   Margin="0,0,5,0"/>
                                                        <TextBlock Text="Apache"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button x:Name="StartApacheButton"
                                                        Height="35"
                                                        Margin="0,0,0,5"
                                                        Click="StartApache_Click"
                                                        ToolTip="Ctrl+1"
                                                        Style="{StaticResource AccentButtonStyle}">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,5,0"/>
                                                                <TextBlock Text="Start Apache"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="ApachePortInfo"
                                                           Text="Port: 8080"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"
                                                           Foreground="Gray"
                                                           Margin="0,0,0,5"/>
                                                <Button x:Name="OpenApacheButton"
                                                        Height="25"
                                                        FontSize="10"
                                                        Click="OpenApache_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸŒ"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- PHP -->
                                <Border Background="{DynamicResource GroupBoxBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="5"
                                        Padding="10">
                                        <StackPanel Orientation="Vertical"
                                                    Width="140">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,8">
                                                        <Ellipse x:Name="PhpIndicator"
                                                                 Width="12"
                                                                 Height="12"
                                                                 Fill="Red"
                                                                 Margin="0,0,5,0"/>
                                                        <TextBlock Text="ðŸ˜"
                                                                   FontSize="16"
                                                                   Margin="0,0,5,0"/>
                                                        <TextBlock Text="PHP"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button x:Name="StartPHPButton"
                                                        Height="35"
                                                        Margin="0,0,0,5"
                                                        Click="StartPHP_Click"
                                                        ToolTip="Ctrl+2"
                                                        Style="{StaticResource AccentButtonStyle}">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,5,0"/>
                                                                <TextBlock Text="Start PHP"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="PhpPortInfo"
                                                           Text="Port: 8000"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"
                                                           Foreground="Gray"
                                                           Margin="0,0,0,5"/>
                                                <Button x:Name="OpenPhpButton"
                                                        Height="25"
                                                        FontSize="10"
                                                        Click="OpenPhp_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸŒ"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- MySQL -->
                                <Border Background="{DynamicResource GroupBoxBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="5"
                                        Padding="10">
                                        <StackPanel Orientation="Vertical"
                                                    Width="140">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,8">
                                                        <Ellipse x:Name="MySqlIndicator"
                                                                 Width="12"
                                                                 Height="12"
                                                                 Fill="Red"
                                                                 Margin="0,0,5,0"/>
                                                        <TextBlock Text="ðŸ—ƒï¸"
                                                                   FontSize="16"
                                                                   Margin="0,0,5,0"/>
                                                        <TextBlock Text="MySQL"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button x:Name="StartMySQLButton"
                                                        Height="35"
                                                        Margin="0,0,0,5"
                                                        Click="StartMySQL_Click"
                                                        ToolTip="Ctrl+3"
                                                        Style="{StaticResource AccentButtonStyle}">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,5,0"/>
                                                                <TextBlock Text="Start MySQL"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="MySqlPortInfo"
                                                           Text="Port: 3306"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"
                                                           Foreground="Gray"
                                                           Margin="0,0,0,5"/>
                                                <Button x:Name="OpenMySqlButton"
                                                        Height="25"
                                                        FontSize="10"
                                                        Click="OpenMySql_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ”—"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Database Access"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>

                                <!-- phpMyAdmin -->
                                <Border Background="{DynamicResource GroupBoxBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="5"
                                        Padding="10">
                                        <StackPanel Orientation="Vertical"
                                                    Width="140">
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Center"
                                                            Margin="0,0,0,8">
                                                        <Ellipse x:Name="PhpMyAdminIndicator"
                                                                 Width="12"
                                                                 Height="12"
                                                                 Fill="Red"
                                                                 Margin="0,0,5,0"/>
                                                        <TextBlock Text="ðŸ› ï¸"
                                                                   FontSize="16"
                                                                   Margin="0,0,5,0"/>
                                                        <TextBlock Text="phpMyAdmin"
                                                                   FontSize="12"
                                                                   FontWeight="Bold"
                                                                   VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <Button x:Name="StartPhpMyAdminButton"
                                                        Height="35"
                                                        Margin="0,0,0,5"
                                                        Click="StartPhpMyAdmin_Click"
                                                        ToolTip="Ctrl+4"
                                                        Style="{StaticResource AccentButtonStyle}">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="â–¶ï¸"
                                                                           FontSize="12"
                                                                           Margin="0,0,5,0"/>
                                                                <TextBlock Text="Start phpMyAdmin"/>
                                                        </StackPanel>
                                                </Button>
                                                <TextBlock x:Name="PhpMyAdminPortInfo"
                                                           Text="Port: 8081"
                                                           FontSize="10"
                                                           HorizontalAlignment="Center"
                                                           Foreground="Gray"
                                                           Margin="0,0,0,5"/>
                                                <Button x:Name="OpenPhpMyAdminButton"
                                                        Height="25"
                                                        FontSize="10"
                                                        Click="OpenPhpMyAdmin_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸŒ"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open in Browser"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Border>
                        </StackPanel>
                </StackPanel>

                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0"
                                  Margin="0,0,10,0"
                                  Background="{DynamicResource GroupBoxBackgroundBrush}">
                                <GroupBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“"
                                                           FontSize="14"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="Projects Manager"
                                                           FontWeight="Bold"/>
                                        </StackPanel>
                                </GroupBox.Header>
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,10">
                                                <TextBox x:Name="NewProjectTextBox"
                                                         Width="120"
                                                         Height="25"
                                                         Margin="0,0,5,0"
                                                         Text="Project name..."
                                                         Foreground="Gray"
                                                         GotFocus="NewProjectTextBox_GotFocus"
                                                         LostFocus="NewProjectTextBox_LostFocus"/>
                                                <Button x:Name="CreateProjectButton"
                                                        Width="70"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="CreateProject_Click"
                                                        ToolTip="Ctrl+N"
                                                        Style="{StaticResource AccentButtonStyle}">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="âž•"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Create"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="RefreshProjectsButton"
                                                        Width="70"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="RefreshProjects_Click"
                                                        ToolTip="Ctrl+R">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ”„"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Refresh"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="OpenProjectsFolderButton"
                                                        Width="90"
                                                        Height="25"
                                                        Click="OpenProjectsFolder_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ“‚"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open Folder"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>

                                        <ListView x:Name="ProjectsListView"
                                                  Grid.Row="1"
                                                  Margin="0,0,0,10"
                                                  Background="{DynamicResource ListViewBackgroundBrush}">
                                                <ListView.View>
                                                        <GridView>
                                                                <GridViewColumn Header="Name"
                                                                                Width="120"
                                                                                DisplayMemberBinding="{Binding Name}"/>
                                                                <GridViewColumn Header="Files"
                                                                                Width="50"
                                                                                DisplayMemberBinding="{Binding FileCount}"/>
                                                                <GridViewColumn Header="Modified"
                                                                                Width="100"
                                                                                DisplayMemberBinding="{Binding LastModified, StringFormat='{}{0:MM/dd/yyyy}'}"/>
                                                        </GridView>
                                                </ListView.View>
                                        </ListView>

                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <Button x:Name="OpenProjectButton"
                                                        Width="90"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="OpenProject_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ“‚"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Open Folder"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="ShareProjectButton"
                                                        Width="70"
                                                        Height="25"
                                                        Click="ShareProject_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ”—"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Share"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="ViewApacheButton"
                                                        Width="100"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="ViewApache_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸŒ"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="View (Apache)"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="ViewPhpButton"
                                                        Width="90"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="ViewPhp_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ˜"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="View (PHP)"/>
                                                        </StackPanel>
                                                </Button>
                                                <Button x:Name="DeleteProjectButton"
                                                        Width="70"
                                                        Height="25"
                                                        Click="DeleteProject_Click"
                                                        IsEnabled="False">
                                                        <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ðŸ—‘ï¸"
                                                                           FontSize="10"
                                                                           Margin="0,0,3,0"/>
                                                                <TextBlock Text="Delete"/>
                                                        </StackPanel>
                                                </Button>
                                        </StackPanel>
                                </Grid>
                        </GroupBox>

                        <GroupBox Grid.Column="1"
                                  Margin="10,0,0,0"
                                  Background="{DynamicResource GroupBoxBackgroundBrush}">
                                <GroupBox.Header>
                                        <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“‹"
                                                           FontSize="14"
                                                           Margin="0,0,5,0"/>
                                                <TextBlock Text="Logs"
                                                           FontWeight="Bold"/>
                                        </StackPanel>
                                </GroupBox.Header>
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Name="LogBox"
                                                 FontFamily="Consolas"
                                                 FontSize="11"
                                                 IsReadOnly="True"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Background="{DynamicResource LogBackgroundBrush}"
                                                 Foreground="{DynamicResource ForegroundBrush}"/>
                                </ScrollViewer>
                        </GroupBox>
                </Grid>

                <!-- Status Bar -->
                <DockPanel x:Name="MainStatusBar"
                           Grid.Row="2"
                           Height="25"
                           Background="{DynamicResource StatusBarBackgroundBrush}">

                        <TextBlock x:Name="StatusText"
                                   Text="Ready"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   DockPanel.Dock="Left"/>

                        <TextBlock x:Name="TimeText"
                                   Text="00:00:00"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   DockPanel.Dock="Right"/>

                        <TextBlock x:Name="ServicesText"
                                   Text="Services: 0/4 running"
                                   Margin="20,0,0,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   HorizontalAlignment="Center"/>
                </DockPanel>
        </Grid>
</Window>