<Window x:Class="NodaStack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NodaStack"
        Height="600"
        Width="1000"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,10,0,20">
                        <TextBlock Text="NodaStack Launcher"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,0,0,10">
                                <Button x:Name="MonitoringButton"
                                        Content="Monitoring"
                                        Width="120"
                                        Height="30"
                                        Margin="0,0,5,0"
                                        Click="Monitoring_Click"/>
                                <Button x:Name="ConfigurationButton"
                                        Content="Configuration"
                                        Width="120"
                                        Height="30"
                                        Click="Configuration_Click"/>
                        </StackPanel>

                        <!-- Services -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <!-- Apache -->
                                <StackPanel Orientation="Vertical"
                                            Margin="5"
                                            Width="140">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,5">
                                                <Ellipse x:Name="ApacheIndicator"
                                                         Width="12"
                                                         Height="12"
                                                         Fill="Red"
                                                         Margin="0,0,5,0"/>
                                                <TextBlock Text="Apache"
                                                           FontSize="10"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button x:Name="StartApacheButton"
                                                Content="Start Apache"
                                                Height="30"
                                                Margin="0,0,0,5"
                                                Click="StartApache_Click"/>
                                        <TextBlock x:Name="ApachePortInfo"
                                                   Text="Port: 8080"
                                                   FontSize="9"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="0,0,0,3"/>
                                        <Button x:Name="OpenApacheButton"
                                                Content="Open in Browser"
                                                Height="25"
                                                FontSize="9"
                                                Click="OpenApache_Click"
                                                IsEnabled="False"/>
                                </StackPanel>

                                <!-- PHP -->
                                <StackPanel Orientation="Vertical"
                                            Margin="5"
                                            Width="140">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,5">
                                                <Ellipse x:Name="PhpIndicator"
                                                         Width="12"
                                                         Height="12"
                                                         Fill="Red"
                                                         Margin="0,0,5,0"/>
                                                <TextBlock Text="PHP"
                                                           FontSize="10"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button x:Name="StartPHPButton"
                                                Content="Start PHP"
                                                Height="30"
                                                Margin="0,0,0,5"
                                                Click="StartPHP_Click"/>
                                        <TextBlock x:Name="PhpPortInfo"
                                                   Text="Port: 8000"
                                                   FontSize="9"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="0,0,0,3"/>
                                        <Button x:Name="OpenPhpButton"
                                                Content="Open in Browser"
                                                Height="25"
                                                FontSize="9"
                                                Click="OpenPhp_Click"
                                                IsEnabled="False"/>
                                </StackPanel>

                                <!-- MySQL -->
                                <StackPanel Orientation="Vertical"
                                            Margin="5"
                                            Width="140">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,5">
                                                <Ellipse x:Name="MySqlIndicator"
                                                         Width="12"
                                                         Height="12"
                                                         Fill="Red"
                                                         Margin="0,0,5,0"/>
                                                <TextBlock Text="MySQL"
                                                           FontSize="10"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button x:Name="StartMySQLButton"
                                                Content="Start MySQL"
                                                Height="30"
                                                Margin="0,0,0,5"
                                                Click="StartMySQL_Click"/>
                                        <TextBlock x:Name="MySqlPortInfo"
                                                   Text="Port: 3306"
                                                   FontSize="9"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="0,0,0,3"/>
                                        <Button x:Name="OpenMySqlButton"
                                                Content="Database Access"
                                                Height="25"
                                                FontSize="9"
                                                Click="OpenMySql_Click"
                                                IsEnabled="False"/>
                                </StackPanel>

                                <!-- phpMyAdmin -->
                                <StackPanel Orientation="Vertical"
                                            Margin="5"
                                            Width="140">
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,0,5">
                                                <Ellipse x:Name="PhpMyAdminIndicator"
                                                         Width="12"
                                                         Height="12"
                                                         Fill="Red"
                                                         Margin="0,0,5,0"/>
                                                <TextBlock Text="phpMyAdmin"
                                                           FontSize="10"
                                                           VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button x:Name="StartPhpMyAdminButton"
                                                Content="Start phpMyAdmin"
                                                Height="30"
                                                Margin="0,0,0,5"
                                                Click="StartPhpMyAdmin_Click"/>
                                        <TextBlock x:Name="PhpMyAdminPortInfo"
                                                   Text="Port: 8081"
                                                   FontSize="9"
                                                   HorizontalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="0,0,0,3"/>
                                        <Button x:Name="OpenPhpMyAdminButton"
                                                Content="Open in Browser"
                                                Height="25"
                                                FontSize="9"
                                                Click="OpenPhpMyAdmin_Click"
                                                IsEnabled="False"/>
                                </StackPanel>
                        </StackPanel>
                </StackPanel>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Projects Panel -->
                        <GroupBox Grid.Column="0"
                                  Header="Projects Manager"
                                  Margin="0,0,10,0">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Projects Controls -->
                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,10">
                                                <TextBox x:Name="NewProjectTextBox"
                                                         Width="150"
                                                         Height="25"
                                                         Margin="0,0,5,0"
                                                         Text="Project name..."
                                                         Foreground="Gray"
                                                         GotFocus="NewProjectTextBox_GotFocus"
                                                         LostFocus="NewProjectTextBox_LostFocus"/>
                                                <Button x:Name="CreateProjectButton"
                                                        Content="Create"
                                                        Width="60"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="CreateProject_Click"/>
                                                <Button x:Name="RefreshProjectsButton"
                                                        Content="Refresh"
                                                        Width="60"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="RefreshProjects_Click"/>
                                                <Button x:Name="OpenProjectsFolderButton"
                                                        Content="Open Folder"
                                                        Width="80"
                                                        Height="25"
                                                        Click="OpenProjectsFolder_Click"/>
                                        </StackPanel>

                                        <!-- Projects List -->
                                        <ListView x:Name="ProjectsListView"
                                                  Grid.Row="1"
                                                  Margin="0,0,0,10">
                                                <ListView.View>
                                                        <GridView>
                                                                <GridViewColumn Header="Name"
                                                                                Width="120"
                                                                                DisplayMemberBinding="{Binding Name}"/>
                                                                <GridViewColumn Header="Files"
                                                                                Width="50"
                                                                                DisplayMemberBinding="{Binding FileCount}"/>
                                                                <GridViewColumn Header="Modified"
                                                                                Width="100"
                                                                                DisplayMemberBinding="{Binding LastModified, StringFormat='{}{0:MM/dd/yyyy}'}"/>
                                                        </GridView>
                                                </ListView.View>
                                        </ListView>

                                        <!-- Project Actions -->
                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <Button x:Name="OpenProjectButton"
                                                        Content="Open Folder"
                                                        Width="80"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="OpenProject_Click"
                                                        IsEnabled="False"/>
                                                <Button x:Name="ViewApacheButton"
                                                        Content="View (Apache)"
                                                        Width="90"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="ViewApache_Click"
                                                        IsEnabled="False"/>
                                                <Button x:Name="ViewPhpButton"
                                                        Content="View (PHP)"
                                                        Width="80"
                                                        Height="25"
                                                        Margin="0,0,5,0"
                                                        Click="ViewPhp_Click"
                                                        IsEnabled="False"/>
                                                <Button x:Name="DeleteProjectButton"
                                                        Content="Delete"
                                                        Width="60"
                                                        Height="25"
                                                        Margin="0,0,0,0"
                                                        Click="DeleteProject_Click"
                                                        IsEnabled="False"/>
                                        </StackPanel>
                                </Grid>
                        </GroupBox>

                        <!-- Logs Panel -->
                        <GroupBox Grid.Column="1"
                                  Header="Logs"
                                  Margin="10,0,0,0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Name="LogBox"
                                                 FontFamily="Consolas"
                                                 FontSize="12"
                                                 IsReadOnly="True"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Background="Black"
                                                 Foreground="White"/>
                                </ScrollViewer>
                        </GroupBox>
                </Grid>
        </Grid>
</Window>