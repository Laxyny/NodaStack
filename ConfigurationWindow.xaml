<Window x:Class="NodaStack.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="NodaStack Configuration"
        Icon="Assets/NodaStackLogo.ico"
        Height="700"
        Width="1000"
        MinHeight="600"
        MinWidth="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Style="{StaticResource ModernCardStyle}"
                Margin="0,0,0,20"
                Padding="24">
            <StackPanel>
                <TextBlock Text="âš™ï¸ Settings"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Configure your NodaStack environment"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Configuration Content -->
        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Padding" Value="16,12"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="4,0"/>
                </Style>
            </TabControl.Resources>

            <!-- Ports Tab -->
            <TabItem Header="ðŸ”Œ Ports">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Center">
                        <TextBlock Text="Service Ports Configuration"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,24"/>
                        
                        <!-- Apache Port -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Apache Port"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="HTTP server port (default: 8080)"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <TextBox x:Name="ApachePortTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Height="40"
                                             FontSize="14"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock x:Name="ApachePortStatus"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- PHP Port -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="PHP Port"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="PHP development server port (default: 8000)"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <TextBox x:Name="PhpPortTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Height="40"
                                             FontSize="14"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock x:Name="PhpPortStatus"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MySQL Port -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MySQL Port"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Database server port (default: 3306)"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <TextBox x:Name="MySqlPortTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Height="40"
                                             FontSize="14"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock x:Name="MySqlPortStatus"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- phpMyAdmin Port -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="phpMyAdmin Port"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Database management interface port (default: 8081)"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <TextBox x:Name="PhpMyAdminPortTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Height="40"
                                             FontSize="14"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock x:Name="PhpMyAdminPortStatus"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- MailHog Ports -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="MailHog Web Port"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Email catching interface port (default: 8025)"
                                               FontSize="11"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,0,0,12"/>
                                    <TextBox x:Name="MailHogWebPortTextBox"
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Height="40"
                                             FontSize="14"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock x:Name="MailHogWebPortStatus"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               TextWrapping="Wrap"
                                               TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="âš™ï¸ General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Center">
                        <TextBlock Text="General Settings"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,24"/>
                        
                        <!-- Application Settings -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Application"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,16"/>
                                
                                <CheckBox x:Name="AutoStartCheckBox"
                                          Content="Auto-start services on application launch"
                                          FontSize="13"
                                          Margin="0,0,0,12"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="NotificationsCheckBox"
                                          Content="Show system notifications"
                                          FontSize="13"
                                          Margin="0,0,0,12"
                                          IsChecked="True"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="DetailedLoggingCheckBox"
                                          Content="Enable detailed logging"
                                          FontSize="13"
                                          Margin="0,0,0,12"
                                          IsChecked="True"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="DarkModeCheckBox"
                                          Content="Dark mode"
                                          FontSize="13"
                                          Margin="0,0,0,12"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="AutoRefreshCheckBox"
                                          Content="Auto-refresh project list"
                                          FontSize="13"
                                          Margin="0,0,0,12"
                                          IsChecked="True"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="SslSupportCheckBox"
                                          Content="Enable SSL/HTTPS support"
                                          FontSize="13"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Database Settings -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Database"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,16"/>
                                
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="MySQL Root Password:"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <PasswordBox x:Name="MySqlPasswordBox"
                                                 Grid.Column="1"
                                                 Height="40"
                                                 FontSize="13"
                                                 Style="{StaticResource DefaultPasswordBoxStyle}"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="MySQL Default Database:"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox x:Name="MySqlDatabaseBox"
                                             Grid.Column="1"
                                             Height="40"
                                             Text="nodastack"
                                             FontSize="13"
                                             Style="{StaticResource ModernTextBoxStyle}"/>
                                </Grid>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="Projects Directory:"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox x:Name="ProjectsDirectoryBox"
                                             Grid.Column="1"
                                             Height="40"
                                             Text="www"
                                             FontSize="13"
                                             Margin="0,0,8,0"
                                             Style="{StaticResource ModernTextBoxStyle}"/>
                                    <Button x:Name="BrowseProjectsButton"
                                            Grid.Column="2"
                                            Width="100"
                                            Height="40"
                                            Content="Browse"
                                            Click="BrowseProjectsButton_Click"
                                            Style="{StaticResource ModernButtonStyle}"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Behavior Tab -->
            <TabItem Header="ðŸŽ¯ Behavior">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="600" HorizontalAlignment="Center">
                        <TextBlock Text="Application Behavior"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,24"/>
                        
                        <!-- System Tray -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="System Tray"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,16"/>
                                <CheckBox x:Name="MinimizeToTrayCheckBox"
                                         Content="Minimize to system tray when closing"
                                         FontSize="13"
                                         Margin="0,0,0,12"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="StartMinimizedCheckBox"
                                         Content="Start minimized to system tray"
                                         FontSize="13"
                                         Margin="0,0,0,12"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="ShowTrayNotificationsCheckBox"
                                         Content="Show notifications in system tray"
                                         FontSize="13"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Docker Integration -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Docker Integration"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,16"/>
                                <CheckBox x:Name="AutoStartDockerCheckBox"
                                         Content="Auto-start Docker containers on launch"
                                         FontSize="13"
                                         Margin="0,0,0,12"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <CheckBox x:Name="KeepDockerRunningCheckBox"
                                         Content="Keep Docker running when minimizing"
                                         FontSize="13"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Updates Tab -->
            <TabItem Header="ðŸ”„ Updates">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel MaxWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Application Updates"
                                   Style="{StaticResource SectionHeaderStyle}"
                                   Margin="0,0,0,24"/>
                        
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock x:Name="CurrentVersionText"
                                           Text="Current Version: 1.0.0"
                                           FontSize="15"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,12"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="LatestVersionText"
                                           Text="Latest Version: Checking..."
                                           FontSize="15"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,24"
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <Button x:Name="CheckUpdatesButton"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="180"
                                        Height="40"
                                        Content="Check for Updates"
                                        Click="CheckForUpdates_Click"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,12"/>
                                <Button x:Name="DownloadUpdateButton"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="180"
                                        Height="40"
                                        Content="Download &amp; Install Update"
                                        Click="DownloadAndInstallUpdate_Click"
                                        HorizontalAlignment="Center"
                                        Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="ResetButton"
                    Style="{StaticResource ModernSecondaryButtonStyle}"
                    Width="120"
                    Height="40"
                    Content="Reset All"
                    Margin="0,0,8,0"
                    Click="ResetButton_Click"/>
            <Button x:Name="CancelButton"
                    Style="{StaticResource ModernSecondaryButtonStyle}"
                    Width="120"
                    Height="40"
                    Content="Cancel"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="120"
                    Height="40"
                    Content="Save"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
